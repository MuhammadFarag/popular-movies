<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.muhammadfarag.popularmovies"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".list.MovieListActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".details.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".list.MovieListActivity">
        </activity>
        <activity
            android:name=".details.TrailersActivity"
            android:label="Movie Trailers"
            android:parentActivityName=".details.DetailsActivity"/>
    </application>

</manifest>
